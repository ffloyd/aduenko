.row(ng-controller="MainCtrl")
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Paste title and abstract here
      .panel-body
        %form(role="form" ng-submit="processForm(form.title, form.content)")
          .form-group
            %label(for="title") Title:
            %input.form-control(type="text" name="title" ng-model="form.title")
          .form-group
            %label(for="content") Content:
            %textarea.form-control(name="content" rows="10" ng-model="form.content")
          %button.btn.btn-primary.pull-right(type="submit") Submit
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          Results &nbsp;
          %span(ng-hide="pagesCount() == 0")({{currentResultPage + 1}}/{{pagesCount()}})
      .panel-body.no-padding
        %ul.list-group.no-margin
          %li.list-group-item.no-external-borders(ng-repeat="result in results | page:5:currentResultPage")
            .row
              .col-md-10
                {{result.text[0]}}
                %i ({{result.text[1]}})
              .col-md-2
                %button.btn.btn-xs.btn-default.pull-right.clearfix(ng-click="selectResult(result.ids)") select this
      .panel-footer.with-floating-xs-btns
        %button.btn.btn-xs.btn-default(ng-hide="currentResultPage == 0" ng-click="currentResultPage = currentResultPage - 1") &lt; Prev
        %button.btn.btn-xs.btn-default.pull-right(ng-hide="currentResultPage >= pagesCount() - 1" ng-click="currentResultPage = currentResultPage + 1") Next &gt;
    .panel.panel-default
      .panel-heading
        %h3.panel-title Logs
      .panel-body
        %ul.list-unstyled
          %li(ng-repeat="entry in logs | reverse track by $index") {{entry}}
